# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Windows scripts should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Linux/Mac scripts should use LF
*.bash text eol=lf

# Docker files
Dockerfile* text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# CI/CD files
.gitlab-ci.yml text eol=lf
.github/**/*.yml text eol=lf

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
.env* text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.gitlab/ export-ignore
docs/ export-ignore
scripts/ export-ignore
*.md export-ignore

